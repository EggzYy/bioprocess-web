# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Computation Limits
MAX_MONTE_CARLO_SAMPLES=10000
MAX_OPTIMIZATION_CONFIGS=1000
MAX_EXPORT_SIZE_MB=100
DEFAULT_MONTE_CARLO_SAMPLES=1000

# Timeouts (seconds)
CALCULATION_TIMEOUT=300
OPTIMIZATION_TIMEOUT=600
EXPORT_TIMEOUT=60

# File Storage
DATA_DIR=./data
EXPORT_DIR=./exports
CONFIG_DIR=./configs
TEMP_DIR=./temp

# Caching
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Security
CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000", "http://127.0.0.1:8000"]
MAX_REQUEST_SIZE_MB=50
RATE_LIMIT_PER_MINUTE=60

# Debug
DEBUG=true
PROFILE=false
